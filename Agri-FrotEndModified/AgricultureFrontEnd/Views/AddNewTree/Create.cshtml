@model TreeAddVm

@{
    ViewBag.Title = "Add New Plant";
    Layout = "_Layout";
}

<div class="add-plant-container">
    <div class="add-plant-card">
        <div class="add-plant-header">
            <h2 class="add-plant-title">Add New Plant</h2>
            <p class="add-plant-subtitle">Register a new plant species for your afforestation project</p>
        </div>

        <div class="add-plant-body">
            <!-- Success Message -->
            @if (TempData["Success"] != null)
            {
                <div class="add-plant-alert add-plant-alert-success">
                    <div class="add-plant-alert-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <div class="add-plant-alert-content">
                        <strong class="add-plant-alert-title">Success!</strong>
                        <p class="add-plant-alert-message">@TempData["Success"]</p>
                    </div>
                </div>
            }

            <!-- Error Message -->
            @if (TempData["Error"] != null)
            {
                <div class="add-plant-alert add-plant-alert-error">
                    <div class="add-plant-alert-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <div class="add-plant-alert-content">
                        <strong class="add-plant-alert-title">Error!</strong>
                        <p class="add-plant-alert-message">@TempData["Error"]</p>
                    </div>
                </div>
            }

            <form asp-action="Create" method="post" onsubmit="return validatePlantForm();" class="add-plant-form">
                @Html.AntiForgeryToken()

                <!-- Plant Name -->
                <div class="add-plant-form-group">
                    <label class="add-plant-label">Plant Name</label>
                    <input asp-for="Name" 
                           class="add-plant-input" 
                           id="treeNameInput" 
                           placeholder="Enter plant name..."/>
                    <span asp-validation-for="Name" class="add-plant-validation-error"></span>
                    <div id="nameError" class="add-plant-error-message">
                        <svg class="add-plant-error-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                        <span>Plant name cannot be empty.</span>
                    </div>
                </div>

                <!-- Scientific Name -->
                <div class="add-plant-form-group">
                    <label class="add-plant-label">Scientific Name</label>
                    <input asp-for="ScientificName" 
                           class="add-plant-input" 
                           id="scientification" 
                           placeholder="Enter scientific name..."/>
                    <span asp-validation-for="ScientificName" class="add-plant-validation-error"></span>
                    <div id="scientificNameError" class="add-plant-error-message">
                        <svg class="add-plant-error-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                        <span>Scientific name cannot be empty.</span>
                    </div>
                </div>

                <!-- Plant Type -->
                <div class="add-plant-form-group">
                    <label class="add-plant-label">Select Plant Type</label>
                    <div class="add-plant-select-wrapper">
                        <select asp-for="TreeType" 
                                asp-items="ViewBag.TypeList" 
                                class="add-plant-select" 
                                id="treeTypeSelect">
                            <option value="">-- Please select an option --</option>
                        </select>
                        <div class="add-plant-select-arrow">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </div>
                    </div>
                    <span asp-validation-for="TreeType" class="add-plant-validation-error"></span>
                    <div id="typeError" class="add-plant-error-message">
                        <svg class="add-plant-error-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                        <span>You must select a plant type.</span>
                    </div>
                </div>

                <button type="submit" class="add-plant-submit-btn">
                    <span>Add Plant</span>
                    <svg class="add-plant-btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    .add-plant-container {
        max-width: 700px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .add-plant-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(45, 80, 22, 0.08);
        border: 2px solid #f0f9f4;
        overflow: hidden;
        animation: addPlantSlideUp 0.6s ease-out;
    }

    @@keyframes addPlantSlideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .add-plant-header {
        background: linear-gradient(135deg, #66bb6a 0%, #81c784 100%);
        padding: 2rem;
        text-align: center;
        color: white;
    }

    .add-plant-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
    }

    .add-plant-subtitle {
        font-size: 1rem;
        margin: 0;
        opacity: 0.95;
    }

    .add-plant-body {
        padding: 2.5rem;
    }

    /* Alert Messages */
    .add-plant-alert {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        padding: 1rem 1.25rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        animation: addPlantAlertSlide 0.5s ease-out;
    }

    @@keyframes addPlantAlertSlide {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .add-plant-alert-success {
        background: #e8f5e9;
        border: 2px solid #81c784;
    }

    .add-plant-alert-error {
        background: #ffebee;
        border: 2px solid #ef5350;
    }

    .add-plant-alert-icon {
        flex-shrink: 0;
        width: 24px;
        height: 24px;
    }

    .add-plant-alert-success .add-plant-alert-icon {
        color: #66bb6a;
    }

    .add-plant-alert-error .add-plant-alert-icon {
        color: #ef5350;
    }

    .add-plant-alert-icon svg {
        width: 100%;
        height: 100%;
        stroke-width: 2.5;
    }

    .add-plant-alert-content {
        flex: 1;
    }

    .add-plant-alert-title {
        display: block;
        font-weight: 700;
        font-size: 1rem;
        margin-bottom: 0.25rem;
    }

    .add-plant-alert-success .add-plant-alert-title {
        color: #2d5016;
    }

    .add-plant-alert-error .add-plant-alert-title {
        color: #c62828;
    }

    .add-plant-alert-message {
        margin: 0;
        font-size: 0.95rem;
        line-height: 1.4;
    }

    .add-plant-alert-success .add-plant-alert-message {
        color: #4a7c3e;
    }

    .add-plant-alert-error .add-plant-alert-message {
        color: #d32f2f;
    }

    /* Form */
    .add-plant-form {
        margin-top: 0;
    }

    .add-plant-form-group {
        margin-bottom: 1.75rem;
    }

    .add-plant-label {
        display: block;
        color: #2d5016;
        font-weight: 600;
        margin-bottom: 0.625rem;
        font-size: 0.95rem;
    }

    .add-plant-input {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #fafafa;
    }

    .add-plant-input:focus {
        outline: none;
        border-color: #66bb6a;
        background: white;
        box-shadow: 0 0 0 4px rgba(102, 187, 106, 0.1);
    }

    /* Select Dropdown */
    .add-plant-select-wrapper {
        position: relative;
    }

    .add-plant-select {
        width: 100%;
        padding: 0.875rem 2.5rem 0.875rem 1rem;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #fafafa;
        appearance: none;
        cursor: pointer;
    }

    .add-plant-select:focus {
        outline: none;
        border-color: #66bb6a;
        background: white;
        box-shadow: 0 0 0 4px rgba(102, 187, 106, 0.1);
    }

    .add-plant-select-arrow {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        width: 20px;
        height: 20px;
        color: #7a9971;
        pointer-events: none;
    }

    .add-plant-select-arrow svg {
        width: 100%;
        height: 100%;
        stroke-width: 2.5;
    }

    /* Error Messages */
    .add-plant-validation-error {
        display: block;
        color: #ef5350;
        font-size: 0.875rem;
        margin-top: 0.5rem;
        font-weight: 500;
    }

    .add-plant-error-message {
        display: none;
        align-items: center;
        gap: 0.5rem;
        margin-top: 0.75rem;
        padding: 0.75rem 1rem;
        background: #ffebee;
        border: 1px solid #ef5350;
        border-radius: 8px;
        color: #d32f2f;
        font-size: 0.875rem;
        font-weight: 500;
        animation: addPlantErrorShake 0.5s ease;
    }

    @@keyframes addPlantErrorShake {
        0%, 100% {
            transform: translateX(0);
        }
        25% {
            transform: translateX(-5px);
        }
        75% {
            transform: translateX(5px);
        }
    }

    .add-plant-error-message.show {
        display: flex;
    }

    .add-plant-error-icon {
        width: 18px;
        height: 18px;
        flex-shrink: 0;
        stroke-width: 2.5;
    }

    /* Submit Button */
    .add-plant-submit-btn {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, #66bb6a 0%, #81c784 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 1.05rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(102, 187, 106, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        margin-top: 2rem;
    }

    .add-plant-submit-btn:hover {
        background: linear-gradient(135deg, #5da961 0%, #72b876 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(102, 187, 106, 0.4);
    }

    .add-plant-submit-btn:active {
        transform: translateY(0);
    }

    .add-plant-btn-icon {
        width: 20px;
        height: 20px;
        stroke-width: 2.5;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .add-plant-body {
            padding: 2rem 1.5rem;
        }

        .add-plant-title {
            font-size: 1.5rem;
        }

        .add-plant-subtitle {
            font-size: 0.95rem;
        }

        .add-plant-form-group {
            margin-bottom: 1.5rem;
        }
    }

    @@media (max-width: 576px) {
        .add-plant-container {
            padding: 1rem 0.5rem;
        }

        .add-plant-header {
            padding: 1.5rem 1rem;
        }

        .add-plant-body {
            padding: 1.5rem 1rem;
        }

        .add-plant-title {
            font-size: 1.35rem;
        }

        .add-plant-subtitle {
            font-size: 0.9rem;
        }

        .add-plant-input,
        .add-plant-select {
            font-size: 0.95rem;
            padding: 0.75rem 0.875rem;
        }

        .add-plant-select {
            padding-right: 2.25rem;
        }

        .add-plant-alert {
            padding: 0.875rem 1rem;
        }

        .add-plant-alert-icon {
            width: 20px;
            height: 20px;
        }

        .add-plant-submit-btn {
            padding: 0.875rem;
            font-size: 1rem;
        }
    }

    @@media (max-width: 380px) {
        .add-plant-container {
            padding: 0.75rem 0.25rem;
        }

        .add-plant-header {
            padding: 1.25rem 0.75rem;
        }

        .add-plant-body {
            padding: 1.25rem 0.75rem;
        }

        .add-plant-input,
        .add-plant-select {
            font-size: 0.9rem;
            padding: 0.65rem 0.75rem;
        }
    }
</style>

<script>
    function validatePlantForm() {
        const treeName = document.getElementById('treeNameInput').value.trim();
        const scientificName = document.getElementById('scientification').value.trim();
        const treeType = document.getElementById('treeTypeSelect').value;

        let isValid = true;

        // Get error message elements
        const nameError = document.getElementById('nameError');
        const scientificNameError = document.getElementById('scientificNameError');
        const typeError = document.getElementById('typeError');

        // Reset errors
        nameError.classList.remove('show');
        scientificNameError.classList.remove('show');
        typeError.classList.remove('show');

        // Validate plant name
        if (treeName === "") {
            nameError.classList.add('show');
            isValid = false;
        }

        // Validate scientific name
        if (scientificName === "") {
            scientificNameError.classList.add('show');
            isValid = false;
        }

        // Validate plant type
        if (treeType === "") {
            typeError.classList.add('show');
            isValid = false;
        }

        return isValid;
    }

    // Remove error messages when user starts typing/selecting
    document.addEventListener('DOMContentLoaded', function() {
        const nameInput = document.getElementById('treeNameInput');
        const scientificInput = document.getElementById('scientification');
        const typeSelect = document.getElementById('treeTypeSelect');
        
        const nameError = document.getElementById('nameError');
        const scientificNameError = document.getElementById('scientificNameError');
        const typeError = document.getElementById('typeError');

        if (nameInput) {
            nameInput.addEventListener('input', function() {
                if (this.value.trim() !== '') {
                    nameError.classList.remove('show');
                }
            });
        }

        if (scientificInput) {
            scientificInput.addEventListener('input', function() {
                if (this.value.trim() !== '') {
                    scientificNameError.classList.remove('show');
                }
            });
        }

        if (typeSelect) {
            typeSelect.addEventListener('change', function() {
                if (this.value !== '') {
                    typeError.classList.remove('show');
                }
            });
        }
    });
</script>