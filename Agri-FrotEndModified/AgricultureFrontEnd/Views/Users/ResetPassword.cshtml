@model UserReadVM

@{
    Layout = "_Layout";
}

<div class="reset-password-container">
    <div class="reset-password-wrapper">
        <!-- Header Section -->
        <div class="reset-password-header">
            <div class="reset-password-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                </svg>
            </div>
            <h2 class="reset-password-title">Reset Password</h2>
            <p class="reset-password-subtitle">Update user credentials securely</p>
        </div>

        <!-- Card -->
        <div class="reset-password-card">
            <form asp-action="ResetPassword" asp-controller="Users" method="post">
                
                <!-- Hidden ID -->
                <input type="hidden" asp-for="Id" />

                <!-- User Info Section -->
                <div class="user-info-section">
                    <div class="user-avatar">
                        @(Model.Name?.Substring(0, 1).ToUpper() ?? "U")
                    </div>
                    <div class="user-details">
                        <h3 class="user-name">@Model.Name</h3>
                        <p class="user-email">@Model.Email</p>
                    </div>
                    <div class="user-role-badge">
                        @if (Model.Role == Roles.Admin)
                        {
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                            </svg>
                            <span>Admin</span>
                        }
                        else
                        {
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            <span>User</span>
                        }
                    </div>
                </div>

                <!-- Divider -->
                <div class="form-divider"></div>

                <!-- Form Fields -->
                <div class="form-section">
                    <!-- Name Field -->
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            Name
                        </label>
                        <input asp-for="Name" class="form-input form-input-readonly" readonly />
                    </div>

                    <!-- Email Field -->
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            Email Address
                        </label>
                        <input asp-for="Email" type="email" class="form-input form-input-readonly" readonly />
                    </div>

                    <!-- Password Field -->
                    <div class="form-group">
                        <label for="passwordInput" class="form-label">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                            </svg>
                            New Password
                        </label>
                        <div class="password-input-wrapper">
                            <input asp-for="Password" type="password" class="form-input" id="passwordInput" placeholder="Enter new password" />
                            <button type="button" class="password-toggle" onclick="togglePassword()">
                                <svg id="eyeIcon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                            </button>
                        </div>
                        <small class="form-hint">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            Leave blank if you don't want to change the password
                        </small>
                    </div>

                    <!-- Role Field -->
                    <div class="form-group">
                        <label asp-for="Role" class="form-label">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                            </svg>
                            User Role
                        </label>
                        <input asp-for="Role" class="form-input form-input-readonly" readonly />
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="form-actions">
                    <a href="@Url.Action("ShowUsers", "Users")" class="btn-cancel">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                        Cancel
                    </a>
                    <button type="submit" class="btn-submit">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .reset-password-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
        min-height: calc(100vh - 100px);
        display: flex;
        align-items: center;
    }

    .reset-password-wrapper {
        width: 100%;
        animation: slideUp 0.6s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Header */
    .reset-password-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .reset-password-icon {
        width: 64px;
        height: 64px;
        margin: 0 auto 1rem;
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 12px rgba(30, 136, 229, 0.2);
    }

    .reset-password-icon svg {
        width: 32px;
        height: 32px;
        color: #1e88e5;
        stroke-width: 2;
    }

    .reset-password-title {
        color: #2d5016;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .reset-password-subtitle {
        color: #7a9971;
        font-size: 1.05rem;
        margin: 0;
    }

    /* Card */
    .reset-password-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 24px rgba(45, 80, 22, 0.12);
        border: 2px solid #f0f9f4;
        overflow: hidden;
    }

    /* User Info Section */
    .user-info-section {
        background: linear-gradient(135deg, #e8f5e9 0%, #f1f8e9 100%);
        padding: 2rem;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        border-bottom: 2px solid #f0f9f4;
    }

    .user-avatar {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: linear-gradient(135deg, #66bb6a 0%, #81c784 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        font-weight: 700;
        color: white;
        flex-shrink: 0;
        box-shadow: 0 4px 12px rgba(102, 187, 106, 0.3);
    }

    .user-details {
        flex: 1;
    }

    .user-name {
        color: #2d5016;
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0 0 0.25rem 0;
    }

    .user-email {
        color: #5d7c50;
        font-size: 0.95rem;
        margin: 0;
    }

    .user-role-badge {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1.25rem;
        background: white;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .user-role-badge svg {
        width: 18px;
        height: 18px;
    }

    .user-role-badge:has(span:contains("Admin")) {
        color: #e65100;
    }

    /* Form Section */
    .form-section {
        padding: 2rem;
    }

    .form-divider {
        height: 2px;
        background: linear-gradient(90deg, transparent, #e8f5e9, transparent);
    }

    .form-group {
        margin-bottom: 1.75rem;
    }

    .form-group:last-child {
        margin-bottom: 0;
    }

    .form-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #2d5016;
        font-weight: 600;
        font-size: 0.95rem;
        margin-bottom: 0.625rem;
    }

    .form-label svg {
        width: 18px;
        height: 18px;
        color: #66bb6a;
        stroke-width: 2.5;
    }

    .form-input {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid #e8f5e9;
        border-radius: 10px;
        font-size: 0.95rem;
        color: #2d5016;
        transition: all 0.3s ease;
        background: white;
    }

    .form-input:focus {
        outline: none;
        border-color: #66bb6a;
        box-shadow: 0 0 0 4px rgba(102, 187, 106, 0.1);
    }

    .form-input-readonly {
        background: #f8fdf9;
        color: #5d7c50;
        cursor: not-allowed;
    }

    .form-input-readonly:focus {
        border-color: #e8f5e9;
        box-shadow: none;
    }

    /* Password Input */
    .password-input-wrapper {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
        color: #7a9971;
        transition: all 0.3s ease;
        border-radius: 6px;
    }

    .password-toggle:hover {
        background: #f0f9f4;
        color: #2d5016;
    }

    .password-toggle svg {
        width: 20px;
        height: 20px;
        stroke-width: 2;
    }

    .form-hint {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        color: #7a9971;
        font-size: 0.85rem;
        margin-top: 0.5rem;
    }

    .form-hint svg {
        width: 14px;
        height: 14px;
        flex-shrink: 0;
        stroke-width: 2.5;
    }

    /* Action Buttons */
    .form-actions {
        display: flex;
        gap: 1rem;
        padding: 0 2rem 2rem 2rem;
    }

    .btn-cancel,
    .btn-submit {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.875rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        text-decoration: none;
    }

    .btn-cancel svg,
    .btn-submit svg {
        width: 18px;
        height: 18px;
        stroke-width: 2.5;
    }

    .btn-cancel {
        background: white;
        color: #5d7c50;
        border-color: #e8f5e9;
    }

    .btn-cancel:hover {
        background: #f8fdf9;
        border-color: #81c784;
        color: #2d5016;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(45, 80, 22, 0.15);
    }

    .btn-submit {
        background: linear-gradient(135deg, #66bb6a 0%, #81c784 100%);
        color: white;
        border: none;
    }

    .btn-submit:hover {
        background: linear-gradient(135deg, #5da961 0%, #72b876 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(102, 187, 106, 0.35);
    }

    .btn-submit:active,
    .btn-cancel:active {
        transform: translateY(0);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .reset-password-container {
            padding: 1rem 0.5rem;
        }

        .reset-password-title {
            font-size: 1.5rem;
        }

        .user-info-section {
            flex-direction: column;
            text-align: center;
            padding: 1.5rem;
        }

        .user-avatar {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }

        .user-name {
            font-size: 1.25rem;
        }

        .form-section {
            padding: 1.5rem;
        }

        .form-actions {
            flex-direction: column;
            padding: 0 1.5rem 1.5rem 1.5rem;
        }

        .btn-cancel,
        .btn-submit {
            width: 100%;
        }
    }

    @@media (max-width: 576px) {
        .reset-password-icon {
            width: 56px;
            height: 56px;
        }

        .reset-password-icon svg {
            width: 28px;
            height: 28px;
        }

        .user-info-section {
            padding: 1.25rem;
        }

        .form-section {
            padding: 1.25rem;
        }

        .form-actions {
            padding: 0 1.25rem 1.25rem 1.25rem;
        }
    }
</style>

<script>
    function togglePassword() {
        const passwordInput = document.getElementById("passwordInput");
        const eyeIcon = document.getElementById("eyeIcon");
        
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>';
        } else {
            passwordInput.type = "password";
            eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>';
        }
    }
</script>