@model AgricultureFrontEnd.Models.Vm.AfforestationVM.AfforestationPageVM
@using System.Text.Json

@{
    ViewBag.Title = "Search Results";
    Layout = "_Layout";
}

<div class="results-container">
    <div class="results-header">
        <h2 class="results-title">Search Results</h2>
        <p class="results-subtitle">Detailed afforestation records based on your search criteria</p>
    </div>

    @if (Model.TreeDetails == null || !Model.TreeDetails.Any())
    {
        <div class="results-empty">
            <svg class="results-empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3>No Results Found</h3>
            <p>No data found for the selected criteria. Try adjusting your filters.</p>
        </div>
    }
    else
    {
        <!-- Export Button -->
        <div class="results-actions">
            <form asp-action="ExportDatatoExcel" method="post">
                <button type="submit" class="results-export-btn">
                    <svg class="results-export-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <span>Export to Excel</span>
                </button>
            </form>
        </div>

        <!-- Results Table -->
        <div class="results-table-wrapper">
            <div class="results-table-container">
                <table class="results-table">
                    <thead>
                        <tr>
                            <th>Date Planted</th>
                            <th>Plant Name</th>
                            <th>Scientific Name</th>
                            <th>Plant Type</th>
                            <th>Location</th>
                            <th>Quantity</th>
                            <th>User</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th>Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody id="table-body">
                        @foreach (var item in Model.TreeDetails.Take(Model.PageSize))
                        {
                            <tr>
                                <td>@item.DateOfPlanted.ToString("yyyy-MM-dd")</td>
                                <td>@item.TreeName</td>
                                <td class="results-scientific">@item.ScientificName</td>
                                <td>@item.TreeTypeName</td>
                                <td>@item.LocationName</td>
                                <td class="results-quantity">@item.Number</td>
                                <td>@item.UserName</td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <div class="results-actions-cell">
                                            <button class="results-btn results-btn-delete delete-btn"
                                                    data-id="@item.Id"
                                                    data-tree="@item.TreeName"
                                                    data-type="@item.TreeTypeName"
                                                    data-number="@item.Number">
                                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                </svg>
                                            </button>

                                            <a class="results-btn results-btn-edit"
                                               asp-controller="Afforestation"
                                               asp-action="Edit"
                                               asp-route-id="@item.Id"
                                               asp-route-returnUrl="@Url.Action("GetStatistics", "Search")">
                                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                                </svg>
                                            </a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav class="results-pagination-wrapper">
                <ul class="results-pagination" id="paginationContainer">
                    <li class="results-page-item">
                        <button type="button" class="results-page-link" data-page="1">1</button>
                    </li>
                </ul>
            </nav>
        }

        <!-- Summary Section -->
        <div class="summary-section">
            <div class="summary-header">
                <h3 class="summary-title">Summary by Plant Type</h3>
                <p class="summary-subtitle">Breakdown of planting quantities</p>
            </div>

            <div class="summary-grid">
                @foreach (var typeGroup in Model.TreeDetails.GroupBy(t => t.TreeTypeName))
                {
                    <div class="summary-card">
                        <div class="summary-card-header">
                            <svg class="summary-card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                            </svg>
                            <h4 class="summary-card-title">@typeGroup.Key</h4>
                        </div>
                        <div class="summary-card-body">
                            <table class="summary-table" data-type="@typeGroup.Key">
                                <thead>
                                    <tr>
                                        <th>Plant Name</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var treeGroup in typeGroup.GroupBy(t => t.TreeName))
                                    {
                                        <tr data-treename="@treeGroup.Key">
                                            <td>@treeGroup.Key</td>
                                            <td class="tree-sum">@treeGroup.Sum(x => x.Number)</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td>Total</td>
                                        <td class="type-sum">@typeGroup.Sum(x => x.Number)</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                }
            </div>

            <!-- Grand Total -->
            <div class="grand-total-card">
                <div class="grand-total-content">
                    <div class="grand-total-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                        </svg>
                    </div>
                    <div class="grand-total-text">
                        <p class="grand-total-label">Grand Total</p>
                        <h3 class="grand-total-value" id="grandTotal">@Model.TreeDetails.Sum(x => x.Number)</h3>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .results-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    /* Header */
    .results-header {
        text-align: center;
        margin-bottom: 2rem;
        animation: resultsSlideUp 0.6s ease-out;
    }

    @@keyframes resultsSlideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .results-title {
        color: #2d5016;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .results-subtitle {
        color: #7a9971;
        font-size: 1.05rem;
        margin: 0;
    }

    /* Empty State */
    .results-empty {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(45, 80, 22, 0.08);
    }

    .results-empty-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        color: #a5d6a7;
        stroke-width: 1.5;
    }

    .results-empty h3 {
        color: #2d5016;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .results-empty p {
        color: #7a9971;
        margin: 0;
    }

    /* Actions */
    .results-actions {
        margin-bottom: 1.5rem;
        animation: resultsSlideUp 0.7s ease-out;
    }

    .results-export-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: linear-gradient(135deg, #66bb6a 0%, #81c784 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(102, 187, 106, 0.3);
    }

    .results-export-btn:hover {
        background: linear-gradient(135deg, #5da961 0%, #72b876 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 187, 106, 0.4);
    }

    .results-export-icon {
        width: 20px;
        height: 20px;
        stroke-width: 2.5;
    }

    /* Table */
    .results-table-wrapper {
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(45, 80, 22, 0.08);
        border: 2px solid #f0f9f4;
        margin-bottom: 2rem;
        animation: resultsSlideUp 0.8s ease-out;
    }

    .results-table-container {
        overflow-x: auto;
    }

    .results-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .results-table thead tr th {
        background: linear-gradient(135deg, #66bb6a 0%, #81c784 100%);
        color: white;
        font-weight: 600;
        text-align: left;
        padding: 1rem;
        font-size: 0.9rem;
        border: none;
    }

    .results-table thead tr th:first-child {
        border-top-left-radius: 14px;
    }

    .results-table thead tr th:last-child {
        border-top-right-radius: 14px;
        text-align: center;
    }

    .results-table tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid #f0f9f4;
    }

    .results-table tbody tr:hover {
        background: #f8fdf9;
    }

    .results-table tbody tr td {
        padding: 0.875rem 1rem;
        color: #2d5016;
        font-size: 0.9rem;
    }

    .results-scientific {
        font-style: italic;
        color: #5d7c50;
    }

    .results-quantity {
        font-weight: 700;
        color: #4a7c3e;
        text-align: center;
    }

    .results-actions-cell {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .results-btn {
        padding: 0.5rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .results-btn svg {
        width: 18px;
        height: 18px;
        stroke-width: 2.5;
    }

    .results-btn-delete {
        background: #ffebee;
        color: #ef5350;
    }

    .results-btn-delete:hover {
        background: #ef5350;
        color: white;
        transform: scale(1.1);
    }

    .results-btn-edit {
        background: #fff8e1;
        color: #ffa726;
    }

    .results-btn-edit:hover {
        background: #ffa726;
        color: white;
        transform: scale(1.1);
    }

    /* Pagination */
    .results-pagination-wrapper {
        display: flex;
        justify-content: center;
        margin: 2rem 0;
    }

    .results-pagination {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        justify-content: center;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .results-page-item {
        list-style: none;
    }

    .results-page-link {
        padding: 0.5rem 0.875rem;
        background: white;
        color: #66bb6a;
        border: 2px solid #66bb6a;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.2s ease;
        min-width: 40px;
        text-align: center;
    }

    .results-page-link:hover {
        background: #66bb6a;
        color: white;
    }

    .results-page-item.active .results-page-link {
        background: #66bb6a;
        color: white;
    }

    .results-page-item.disabled .results-page-link {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* Summary Section */
    .summary-section {
        margin-top: 3rem;
        animation: resultsSlideUp 1s ease-out;
    }

    .summary-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .summary-title {
        color: #2d5016;
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .summary-subtitle {
        color: #7a9971;
        font-size: 1rem;
        margin: 0;
    }

    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .summary-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(45, 80, 22, 0.08);
        border: 2px solid #f0f9f4;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .summary-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(45, 80, 22, 0.12);
    }

    .summary-card-header {
        background: linear-gradient(135deg, #66bb6a 0%, #81c784 100%);
        color: white;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .summary-card-icon {
        width: 24px;
        height: 24px;
        stroke-width: 2.5;
    }

    .summary-card-title {
        font-size: 1.1rem;
        font-weight: 700;
        margin: 0;
    }

    .summary-card-body {
        padding: 0;
    }

    .summary-table {
        width: 100%;
        border-collapse: collapse;
    }

    .summary-table thead tr th {
        background: #f8fdf9;
        color: #2d5016;
        font-weight: 600;
        text-align: left;
        padding: 0.75rem 1rem;
        font-size: 0.85rem;
        border-bottom: 2px solid #e8f5e9;
    }

    .summary-table thead tr th:last-child {
        text-align: right;
    }

    .summary-table tbody tr td {
        padding: 0.625rem 1rem;
        color: #2d5016;
        border-bottom: 1px solid #f0f9f4;
    }

    .summary-table tbody tr:hover {
        background: #f8fdf9;
    }

    .summary-table tbody tr td:last-child {
        text-align: right;
        font-weight: 600;
        color: #4a7c3e;
    }

    .summary-table tfoot tr td {
        padding: 0.875rem 1rem;
        font-weight: 700;
        color: #2d5016;
        background: #e8f5e9;
        border-top: 2px solid #66bb6a;
    }

    .summary-table tfoot tr td:last-child {
        text-align: right;
        font-size: 1.1rem;
    }

    /* Grand Total */
    .grand-total-card {
        background: linear-gradient(135deg, #66bb6a 0%, #81c784 100%);
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 16px rgba(102, 187, 106, 0.3);
        max-width: 500px;
        margin: 0 auto;
    }

    .grand-total-content {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .grand-total-icon {
        width: 64px;
        height: 64px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .grand-total-icon svg {
        width: 36px;
        height: 36px;
        color: white;
        stroke-width: 2;
    }

    .grand-total-text {
        flex: 1;
    }

    .grand-total-label {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1rem;
        font-weight: 600;
        margin: 0 0 0.5rem 0;
    }

    .grand-total-value {
        color: white;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .results-title {
            font-size: 1.5rem;
        }

        .results-table {
            font-size: 0.85rem;
        }

        .results-table thead tr th,
        .results-table tbody tr td {
            padding: 0.625rem 0.75rem;
        }

        .summary-grid {
            grid-template-columns: 1fr;
        }

        .grand-total-value {
            font-size: 2rem;
        }
    }

    @@media (max-width: 576px) {
        .results-container {
            padding: 1rem 0.5rem;
        }

        .results-table-container {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .results-table {
            min-width: 800px;
        }

        .grand-total-content {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
    // Delete record logic
    $(document).on("click", ".delete-btn", function () {
        const btn = $(this);
        const id = btn.data("id");
        const treeName = btn.data("tree");
        const typeName = btn.data("type");
        const number = parseInt(btn.data("number")) || 0;

        if (!confirm(`Are you sure you want to delete: ${treeName}?`)) return;

        $.ajax({
            url: '/Search/DeleteRecord',
            type: 'POST',
            data: { id: id },
            success: function (res) {
                if (res.success) {
                    const row = btn.closest("tr");
                    row.fadeOut(400, function () { $(this).remove(); });

                    // Update grand total
                    let grandTotal = parseInt($("#grandTotal").text()) || 0;
                    $("#grandTotal").text(grandTotal - number);

                    // Update summary
                    const summaryTable = $(`.summary-table[data-type='${typeName}']`);
                    const treeRow = summaryTable.find(`tr[data-treename='${treeName}']`);
                    const typeSumCell = summaryTable.find(".type-sum");

                    if (treeRow.length) {
                        const treeSumCell = treeRow.find(".tree-sum");
                        let currentTreeSum = parseInt(treeSumCell.text()) || 0;
                        let newTreeSum = currentTreeSum - number;

                        if (newTreeSum > 0) {
                            treeSumCell.text(newTreeSum);
                        } else {
                            treeRow.fadeOut(300, function () { $(this).remove(); });
                        }
                    }

                    if (typeSumCell.length) {
                        let currentTypeSum = parseInt(typeSumCell.text()) || 0;
                        let newTypeSum = currentTypeSum - number;

                        if (newTypeSum > 0) {
                            typeSumCell.text(newTypeSum);
                        } else {
                            summaryTable.closest(".summary-card").fadeOut(400, function () { $(this).remove(); });
                        }
                    }
                } else {
                    alert(res.message || "Error deleting record.");
                }
            },
            error: function () {
                alert("Something went wrong while deleting.");
            }
        });
    });

    // Frontend pagination
    $(document).ready(function () {
        const allData = @Html.Raw(JsonSerializer.Serialize(
            Model.TreeDetails.OrderBy(a => a.DateOfPlanted),
            new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }
        ));

        const pageSize = @Model.PageSize;
        let currentPage = 1;
        const totalPages = Math.ceil(allData.length / pageSize);

        function renderPage(page) {
            currentPage = page;
            const start = (page - 1) * pageSize;
            const end = start + pageSize;
            const pageData = allData.slice(start, end);

            const tbody = $("#table-body");
            tbody.empty();

            const isAdmin = '@User.IsInRole("Admin")' === 'True';

            pageData.forEach(item => {
                const row = `
                    <tr>
                        <td>${item.dateOfPlanted.split('T')[0]}</td>
                        <td>${item.treeName}</td>
                        <td class="results-scientific">${item.scientificName}</td>
                        <td>${item.treeTypeName}</td>
                        <td>${item.locationName}</td>
                        <td class="results-quantity">${item.number}</td>
                        <td>${item.userName}</td>
                        ${isAdmin ? `
                        <td>
                            <div class="results-actions-cell">
                                <button class="results-btn results-btn-delete delete-btn"
                                        data-id="${item.id}"
                                        data-tree="${item.treeName}"
                                        data-type="${item.treeTypeName}"
                                        data-number="${item.number}">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                    </svg>
                                </button>
                                <a class="results-btn results-btn-edit" href="/Afforestation/Edit/${item.id}?returnUrl=%2FSearch%2FGetStatistics">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                </a>
                            </div>
                        </td>` : ''}
                    </tr>`;
                tbody.append(row);
            });

            renderPagination();
        }

        function renderPagination() {
            const pagination = $("#paginationContainer");
            pagination.empty();

            const prevDisabled = currentPage === 1 ? "disabled" : "";
            pagination.append(`<li class="results-page-item ${prevDisabled}">
                <button type="button" class="results-page-link" data-page="${currentPage - 1}">Previous</button>
            </li>`);

            for (let i = 1; i <= totalPages; i++) {
                const active = currentPage === i ? "active" : "";
                pagination.append(`<li class="results-page-item ${active}">
                    <button type="button" class="results-page-link" data-page="${i}">${i}</button>
                </li>`);
            }

            const nextDisabled = currentPage === totalPages ? "disabled" : "";
            pagination.append(`<li class="results-page-item ${nextDisabled}">
                <button type="button" class="results-page-link" data-page="${currentPage + 1}">Next</button>
            </li>`);

            $(".results-page-link").off("click").on("click", function () {
                const page = parseInt($(this).data("page"));
                if (!isNaN(page) && page >= 1 && page <= totalPages) {
                    renderPage(page);
                }
            });
        }

        renderPage(currentPage);
    });
</script>
}