@model LoginVm

<div class="login-wrapper">
    <div class="login-card">
        <div class="login-header">
            <h3 class="login-title">Welcome Back</h3>
            <p class="login-subtitle">Sign in to your Afforestation account</p>
        </div>

        <form method="post" class="login-form">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="login-form-group">
                <label asp-for="Email" class="login-label">Email Address</label>
                <div class="login-input-wrapper">
                    <input asp-for="Email" type="email" class="login-input login-input-email" placeholder="Enter your email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="login-form-group">
                <label asp-for="Password" class="login-label">Password</label>
                <div class="login-input-wrapper">
                    <input asp-for="Password" type="password" class="login-input login-input-password" id="loginPasswordInput" placeholder="Enter your password" />
                    <button type="button" class="login-toggle-password" onclick="toggleLoginPassword()" tabindex="-1">
                        <span id="loginPasswordToggleIcon">Show</span>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="login-submit-btn">
                <span>Login to Dashboard</span>
                <span class="login-btn-arrow">â†’</span>
            </button>
        </form>

        @if (ViewBag.Message != null)
        {
        <div class="login-error-message">
            @ViewBag.Message
        </div>
        }
    </div>
</div>

<style>
    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 300px);
        padding: 2rem 1rem;
    }

    .login-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(45, 80, 22, 0.15);
        width: 100%;
        max-width: 450px;
        padding: 2.5rem;
        animation: loginFadeIn 0.6s ease-out;
        border: 1px solid rgba(106, 168, 62, 0.2);
    }

    @@keyframes loginFadeIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .login-title {
        color: #2d5016;
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .login-subtitle {
        color: #6c757d;
        font-size: 0.95rem;
        margin: 0;
    }

    .login-form {
        margin-top: 1.5rem;
    }

    .login-form-group {
        margin-bottom: 1.5rem;
    }

    .login-label {
        display: block;
        font-weight: 600;
        color: #2d5016;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }

    .login-input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .login-input {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #fafafa;
    }

    .login-input-password {
        padding-right: 4rem;
    }

    .login-input:focus {
        outline: none;
        border-color: #4a7c2c;
        background: white;
        box-shadow: 0 0 0 4px rgba(106, 168, 62, 0.1);
    }

    .login-toggle-password {
        position: absolute;
        right: 0.75rem;
        background: transparent;
        border: none;
        cursor: pointer;
        font-size: 0.85rem;
        padding: 0.5rem;
        transition: all 0.2s ease;
        z-index: 2;
        color: #6c757d;
        font-weight: 500;
    }

    .login-toggle-password:hover {
        color: #2d5016;
    }

    .login-toggle-password:focus {
        outline: none;
    }

    .login-submit-btn {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, #2d5016 0%, #4a7c2c 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.05rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 2rem;
        box-shadow: 0 4px 12px rgba(45, 80, 22, 0.3);
    }

    .login-submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(45, 80, 22, 0.4);
        background: linear-gradient(135deg, #234010 0%, #3d6824 100%);
    }

    .login-submit-btn:active {
        transform: translateY(0);
    }

    .login-btn-arrow {
        font-size: 1.2rem;
        transition: transform 0.3s ease;
    }

    .login-submit-btn:hover .login-btn-arrow {
        transform: translateX(5px);
    }

    .login-error-message {
        margin-top: 1.5rem;
        padding: 1rem;
        background: #fff5f5;
        border: 2px solid #fc8181;
        border-radius: 12px;
        color: #c53030;
        font-weight: 500;
        animation: loginErrorShake 0.5s ease;
    }

    @@keyframes loginErrorShake {
        0%, 100% {
            transform: translateX(0);
        }
        25% {
            transform: translateX(-10px);
        }
        75% {
            transform: translateX(10px);
        }
    }

    /* Responsive Design */
    @@media (max-width: 576px) {
        .login-card {
            padding: 2rem 1.5rem;
        }

        .login-title {
            font-size: 1.5rem;
        }

        .login-input {
            padding: 0.75rem 1rem;
            font-size: 0.95rem;
        }

        .login-input-password {
            padding-right: 4rem;
        }

        .login-submit-btn {
            padding: 0.875rem;
            font-size: 1rem;
        }
    }
</style>

@section Scripts {
<script>
    function toggleLoginPassword() {
        const passwordInput = document.getElementById('loginPasswordInput');
        const toggleIcon = document.getElementById('loginPasswordToggleIcon');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.textContent = 'Hide';
        } else {
            passwordInput.type = 'password';
            toggleIcon.textContent = 'Show';
        }
    }
</script>
}