@model RegisterVM

<div class="d-flex justify-content-center mt-5">
    <div class="p-5 bg-white rounded-3 shadow-lg" style="width: 100%; max-width: 420px;">
        <h3 class="mb-4 text-center fw-bold text-success">إنشاء حساب جديد</h3>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center py-2">
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center py-2">
                @TempData["Error"]
            </div>
        }

        <form method="post" onsubmit="return validateRegisterForm();">
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

            <!-- Name -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="fw-semibold"></label>
                <input asp-for="Name" type="text" class="form-control rounded-2" placeholder="Enter your name..." id="nameInput"/>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="fw-semibold"></label>
                <input asp-for="Email" type="email" class="form-control rounded-2" placeholder="Enter your email..." id="emailInput"/>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label asp-for="Password" class="fw-semibold"></label>
                <div class="input-group">
                    <input asp-for="Password" type="password" class="form-control rounded-start-2" id="passwordInput" placeholder="Enter your password..."/>
                    <button type="button" class="btn btn-outline-secondary btn-sm rounded-end-2" onclick="togglePassword()" tabindex="-1">
                        Show
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Role -->
            <div class="form-group mb-4">
                <label asp-for="Role" class="fw-semibold"></label>
                <select asp-for="Role" asp-items="Html.GetEnumSelectList<Roles>()" class="form-select rounded-2" id="roleSelect">
                    <option value="">Select Role</option> 
                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn w-100 py-2 fw-semibold text-white rounded-2" style="background-color: #14ae64;">
                Register
            </button>
        </form>

        @if (ViewBag.Message != null)
        {
            <p class="text-danger mt-3 text-center fw-semibold">@ViewBag.Message</p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
        }

        function validateRegisterForm() {
            const name = document.getElementById('nameInput').value.trim();
            const email = document.getElementById('emailInput').value.trim();
            const password = document.getElementById('passwordInput').value.trim();
            const role = document.getElementById('roleSelect').value;

            if (name === "") {
                alert("Name cannot be empty.");
                return false;
            }

            if (email === "") {
                alert("Email cannot be empty.");
                return false;
            }

            if (password === "") {
                alert("Password cannot be empty.");
                return false;
            }

            if (role === "") {
                alert("You must select a Role.");
                return false;
            }

            return true;
        }
    </script>
}
