<h2 class="text-center mt-4">Welcome!</h2>

@if (User.Identity != null && !User.Identity.IsAuthenticated)
{
    <div class="alert alert-info text-center mt-4">
        Please <a asp-controller="Account" asp-action="Login" class="fw-bold">log in</a>.
    </div>
}
else
{
    <div class="text-center mt-3">
        <p>You are logged in as <b>@User.Identity?.Name</b>.</p>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm mt-2">Logout</a>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="container mt-5">
    <h3 class="text-center mb-4"> Admin Panel</h3>
    <p class="text-center text-muted">Only visible to Admins.</p>

    <div class="row g-4">
        <!-- Column for adding types -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header text-center fw-bold" style="background-color:white; color:#14ae64;">
                    اضافة انواع
                </div>
                <div class="card-body d-flex flex-column gap-2">
                    <a asp-controller="AddTreeType" asp-action="Create" class="btn w-100 text-white" style="background-color:#14ae64;">
                         اضافة نوع نبات جديد
                    </a>
                    <a asp-controller="AddLocationType" asp-action="Create" class="btn w-100 text-white" style="background-color:#14ae64;">
                         اضافة نوع موقع جديد
                    </a>
                </div>
            </div>
        </div>

        <!-- Column for adding items -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header text-center fw-bold" style="background-color:white; color:#14ae64;">
                    إضافة عناصر
                </div>
                <div class="card-body d-flex flex-column gap-2">
                    <a asp-controller="AddPlant" asp-action="Create" class="btn w-100 text-white" style="background-color:#14ae64;">
                         اضافة عملية تشجير
                    </a>
                    <a asp-controller="AddNewTree" asp-action="Create" class="btn w-100 text-white" style="background-color:#14ae64;">
                         اضافة نبات
                    </a>
                    <a asp-controller="AddNewLocation" asp-action="Create" class="btn w-100 text-white" style="background-color:#14ae64;">
                         اضافة الموقع
                    </a>
                </div>
            </div>
        </div>

        <!-- Column for user management -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header text-center fw-bold" style="background-color:white; color:#14ae64;">
                    إدارة المستخدمين
                </div>
                <div class="card-body d-flex flex-column gap-2">
                    <a asp-controller="Register" asp-action="Register" class="btn w-100 text-white" style="background-color:#14ae64;">
                         اضافة مستخدم
                    </a>
                    <a asp-controller="Users" asp-action="ShowUsers" class="btn w-100 text-white" style="background-color:#14ae64;">
                         اظهار جميع المستخدمين
                    </a>
                </div>
            </div>
        </div>

        <!-- Column for searching and displaying data -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header text-center fw-bold" style="background-color:white; color:#14ae64;">
                    بحث و عرض البيانات
                </div>
                <div class="card-body d-flex flex-column gap-2">
                    <a asp-controller="Search" asp-action="GetStatistics" class="btn w-100 text-white" style="background-color:#14ae64;">
                         بحث
                    </a>
                    <a asp-controller="ShowData" asp-action="AllTrees" class="btn w-100 text-white" style="background-color:#14ae64;">
                         اظهار جميع النباتات
                    </a>
                    <a asp-controller="ShowData" asp-action="AllLocations" class="btn w-100 text-white" style="background-color:#14ae64;">
                         اظهار جميع المواقع
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

    }
    else if (User.IsInRole("User"))
    {
        <div class="container mt-5 text-center">
            <h3 class="mb-4">👤 User Dashboard</h3>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a asp-controller="AddPlant" asp-action="Create" class="btn text-white" style="background-color:#14ae64;">
                     اضافة عملية تشجير
                </a>
                <a asp-controller="UserRecords" asp-action="DataAdded" class="btn text-white" style="background-color:#14ae64;">
                     البينات المضافة
                </a>
            </div>
        </div>
    }
    else if (User.IsInRole(nameof(Roles.Viewer)))
    {
        <div class="container mt-5 text-center">
            <h3 class="mb-4">👀 Viewer Dashboard</h3>
            <a asp-controller="Search" asp-action="GetStatistics" class="btn text-white" style="background-color:#14ae64;">
                🔍 بحث
            </a>
        </div>
    }
}
