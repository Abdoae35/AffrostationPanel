@model AgricultureFrontEnd.Models.Vm.AfforestationVM.AfforestationPageVM
@using System.Text.Json

@{
    ViewBag.Title = "Search Results";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 fw-bold text-success">Detailed Results</h2>
    
  



    @if (Model.TreeDetails == null || !Model.TreeDetails.Any())
    {
        <div class="alert alert-warning text-center shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            No data found for the selected duration.
        </div>
    }
    else
    {
        <form asp-action="ExportDatatoExcel" method="post">
            <button type="submit" class="btn btn-sm btn-outline-success">Download Excel File</button>
        </form>
        <!-- Results Table -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered align-middle text-center">
                        <thead class="table-success">
                            <tr>
                                <th>Date Planted</th>
                                <th>Plant Name</th>
                                <th>Scientific Name</th>
                                <th>Plant Type</th>
                                <th>Location Name</th>
                                <th>Number</th>
                                <th>User Name</th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>Manage</th>
                                }
                            </tr>
                        </thead>
                        <tbody id="table-body">
                            @foreach (var item in Model.TreeDetails.Take(Model.PageSize))
                            {
                                <tr>
                                    <td>@item.DateOfPlanted.ToString("yyyy-MM-dd")</td>
                                    <td>@item.TreeName</td>
                                    <td>@item.ScientificName</td>
                                    <td>@item.TreeTypeName</td>
                                    <td>@item.LocationName</td>
                                    <td class="fw-bold text-success">@item.Number</td>
                                    <td>@item.UserName</td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td>
                                            <div class="d-flex gap-2 justify-content-center">
                                                <button class="btn btn-sm btn-outline-danger delete-btn"
                                                        data-id="@item.Id"
                                                        data-tree="@item.TreeName"
                                                        data-type="@item.TreeTypeName"
                                                        data-number="@item.Number">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>

                                                <a class="btn btn-sm btn-outline-warning"
                                                   asp-controller="Afforestation"
                                                   asp-action="Edit"
                                                   asp-route-id="@item.Id"
                                                   asp-route-returnUrl="@Url.Action("GetStatistics", "Search")">
                                                    <i class="bi bi-pencil-square"></i> Edit
                                                </a>
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {<nav class="d-flex justify-content-center mt-4" style="margin-bottom: 10px; flex-wrap: wrap;">
                <ul class="pagination justify-content-center" 
                    style="margin:0; display:flex; flex-wrap:wrap; gap:5px;">
                    <li class="page-item">
                        <button type="button" class="page-link" data-page="1"
                                style="color:#14ae64; border:1px solid #14ae64; 
                           min-width:40px; text-align:center; 
                           transition: all 0.2s ease;">
                            1
                        </button>
                    </li>
                </ul>
            </nav>



        }

        <!-- Summary Section -->
        <h3 class="text-center mb-3 fw-bold text-success">Summary</h3>
        <div class="d-flex flex-wrap gap-4 justify-content-center">
            @foreach (var typeGroup in Model.TreeDetails.GroupBy(t => t.TreeTypeName))
            {
                <div class="card shadow-sm border-0" style="flex: 1 1 300px; max-width: 400px;">
                    <div class="card-header text-center fw-bold text-white" style="background-color:#14ae64;">
                        @typeGroup.Key
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered text-center mb-0 summary-table" data-type="@typeGroup.Key">
                                <thead class="table-light">
                                    <tr>
                                        <th>Plant Name</th>
                                        <th>Number</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var treeGroup in typeGroup.GroupBy(t => t.TreeName))
                                    {
                                        <tr data-treename="@treeGroup.Key">
                                            <td>@treeGroup.Key</td>
                                            <td class="fw-bold tree-sum">@treeGroup.Sum(x => x.Number)</td>
                                        </tr>
                                    }
                                    <tr class="table-secondary fw-bold type-total-row">
                                        <td>Total</td>
                                        <td class="type-sum">@typeGroup.Sum(x => x.Number)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Grand Total -->
        <div class="card shadow-sm border-0 mt-4 mx-auto" style="max-width: 400px;">
            <div class="card-header text-center fw-bold text-white" style="background-color:#14ae64;">
                Grand Total
            </div>
            <div class="card-body text-center">
                <h4 class="fw-bold text-success mb-0" id="grandTotal">
                    @Model.TreeDetails.Sum(x => x.Number)
                </h4>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

   <script>
    // === Delete record logic ===
    $(document).on("click", ".delete-btn", function () {
        const btn = $(this);
        const id = btn.data("id");
        const treeName = btn.data("tree");
        const typeName = btn.data("type");
        const number = parseInt(btn.data("number")) || 0;

        if (!confirm(`Are you sure you want to delete the Tree: ${treeName}?`)) return;

        $.ajax({
            url: '/Search/DeleteRecord',
            type: 'POST',
            data: { id: id },
            success: function (res) {
                if (res.success) {
                    const row = btn.closest("tr");
                    row.fadeOut(400, function () { $(this).remove(); });

                    // Update grand total
                    let grandTotal = parseInt($("#grandTotal").text()) || 0;
                    $("#grandTotal").text(grandTotal - number);

                    // Update summary
                    const summaryTable = $(`.summary-table[data-type='${typeName}']`);
                    const treeRow = summaryTable.find(`tr[data-treename='${treeName}']`);
                    const typeSumCell = summaryTable.find(".type-sum");

                    if (treeRow.length) {
                        const treeSumCell = treeRow.find(".tree-sum");
                        let currentTreeSum = parseInt(treeSumCell.text()) || 0;
                        let newTreeSum = currentTreeSum - number;

                        if (newTreeSum > 0) {
                            treeSumCell.text(newTreeSum);
                        } else {
                            treeRow.fadeOut(300, function () { $(this).remove(); });
                        }
                    }

                    if (typeSumCell.length) {
                        let currentTypeSum = parseInt(typeSumCell.text()) || 0;
                        let newTypeSum = currentTypeSum - number;

                        if (newTypeSum > 0) {
                            typeSumCell.text(newTypeSum);
                        } else {
                            summaryTable.closest(".card").fadeOut(400, function () { $(this).remove(); });
                        }
                    }
                } else {
                    alert(res.message || "Error deleting record.");
                }
            },
            error: function () {
                alert("Something went wrong while deleting.");
            }
        });
    });

    // === Frontend pagination ===
    $(document).ready(function () {
        const allData = @Html.Raw(JsonSerializer.Serialize(
            Model.TreeDetails.OrderBy(a => a.DateOfPlanted),
            new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }
        ));

        const pageSize = @Model.PageSize;
        let currentPage = 1;
        const totalPages = Math.ceil(allData.length / pageSize);

        function renderPage(page) {
            currentPage = page;
            const start = (page - 1) * pageSize;
            const end = start + pageSize;
            const pageData = allData.slice(start, end);

            const tbody = $("#table-body");
            tbody.empty();

            pageData.forEach(item => {
                const row = `
                    <tr>
                        <td>${item.dateOfPlanted.split('T')[0]}</td>
                        <td>${item.treeName}</td>
                        <td>${item.scientificName}</td>
                        <td>${item.treeTypeName}</td>
                        <td>${item.locationName}</td>
                        <td class="fw-bold text-success">${item.number}</td>
                        <td>${item.userName}</td>
                        ${'@User.IsInRole("Admin")' === 'True' ? `
                        <td>
                            <div class="d-flex gap-2 justify-content-center">
                                <button class="btn btn-sm btn-outline-danger delete-btn"
                                        data-id="${item.id}"
                                        data-tree="${item.treeName}"
                                        data-type="${item.treeTypeName}"
                                        data-number="${item.number}">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                                <a class="btn btn-sm btn-outline-warning" href="/Afforestation/Edit/${item.id}">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </div>
                        </td>` : ''}
                    </tr>`;
                tbody.append(row);
            });

            renderPagination();
        }

        function renderPagination() {
            const pagination = $(".pagination");
            pagination.empty();

            const greenStyle = "color:#14ae64; border:1px solid #14ae64;";
            const activeStyle = "background-color:#14ae64; color:white; border:1px solid #14ae64;";

            const prevDisabled = currentPage === 1 ? "disabled" : "";
            pagination.append(`<li class="page-item ${prevDisabled}">
                <button type="button" class="page-link" data-page="${currentPage - 1}" style="${greenStyle}">Previous</button>
            </li>`);

            for (let i = 1; i <= totalPages; i++) {
                const style = currentPage === i ? activeStyle : greenStyle;
                pagination.append(`<li class="page-item ${currentPage === i ? "active" : ""}">
                    <button type="button" class="page-link" data-page="${i}" style="${style}">${i}</button>
                </li>`);
            }

            const nextDisabled = currentPage === totalPages ? "disabled" : "";
            pagination.append(`<li class="page-item ${nextDisabled}">
                <button type="button" class="page-link" data-page="${currentPage + 1}" style="${greenStyle}">Next</button>
            </li>`);

            // Hover and click
            $(".page-link").hover(
                function () { $(this).css("background-color", "#14ae64").css("color", "white"); },
                function () {
                    if (!$(this).closest(".page-item").hasClass("active")) {
                        $(this).css("background-color", "transparent").css("color", "#14ae64");
                    }
                }
            );

            $(".page-link").off("click").on("click", function () {
                const page = parseInt($(this).data("page"));
                if (!isNaN(page) && page >= 1 && page <= totalPages) {
                    renderPage(page);
                }
            });
        }

        renderPage(currentPage);
    });
</script>


    <style>
        .container {
            transition: opacity 0.3s ease;
        }
    </style>
}
